{
	"$schema": "http://json.schemastore.org/install",
	"workers": [{
		"src": "./build/worker.js"
	}],
	"hooks": [{
		"endpoint": "https://logflare.app/api/v1/cloudflare/event",
		"events": ["option-change:account", "oauth-login"],
		"block": true,
		"authenticate": ["account"],
		"failure": {
			"action": "notify",
			"message": "There was an error communicating with Logflare."
		}
	}],
	"preview": {
		"hide": true
	},
	"options": {
		"properties": {
			"account": {
				"title": "Logflare Account",
				"type": "object",
				"format": "account",
				"services": ["logflare"],
				"required": true,
        "order": 1
			},
			"source": {
        "showIf": {
          "account": {
            "op": "!=",
            "value": ""
          }
        },
				"title": "Source",
				"type": "string",
				"description": "Which source should we send logs to?",
				"order": 2,
        "required": true,
				"enum": ["signin"],
				"enumNames": {
          "signin": "Sign in to select a source"
        }
			}
		}
	}
}
